{
  "workspaces": [
    "packages/*"
  ],
  "private": true,
  "name": "twurple-workspace",
  "repository": "github:twurple/twurple",
  "author": "Daniel Fischer <daniel@d-fischer.dev>",
  "license": "MIT",
  "devDependencies": {
    "@d-fischer/documen.ts": "^0.16.10",
    "@d-fischer/eslint-config": "^6.3.0",
    "@types/node": "^18.19.87",
    "@types/twitch-ext": "^1.24.4",
    "cross-env": "^7.0.3",
    "crowd": "^0.2.0",
    "del-cli": "^7.0.0",
    "eslint": "^8.57.0",
    "husky": "^4.3.6",
    "lint-staged": "^11.2.6",
    "prettier": "^2.2.1",
    "tmi.js": "^1.8.5",
    "typescript": "~5.4.2",
    "vitest": "^4.0.13"
  },
  "resolutions": {
    "@types/react": "^17"
  },
  "scripts": {
    "lint": "eslint --ext js,ts packages",
    "prettier:check": "prettier --check \"packages/**\"",
    "prettier:fix": "prettier --write \"packages/**\"",
    "build": "tsc --build",
    "rebuild": "yarn clean && yarn build",
    "clean": "del-cli packages/**/lib packages/**/*.tsbuildinfo",
    "docs": "documen.ts",
    "test": "vitest",
    "preversion": "yarn build && yarn lint && yarn prettier:check",
    "prepublishOnly": "yarn rebuild"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": "prettier --write",
    "*.{js,ts}": "eslint --fix"
  },
  "dependencies": {
    "@types/react": "^17"
  }
}
