{
	"compilerOptions": {
		"composite": true,
		"module": "node16",
		"target": "es2022",
		"lib": ["es2022"],
		"moduleResolution": "node16",
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"importHelpers": true,
		"strict": true,
		"noUnusedLocals": true,
		"experimentalDecorators": true,
		"downlevelIteration": true,
		"isolatedModules": true,
		"declarationMap": true,
		"stripInternal": true
	},
	"exclude": ["node_modules", "lib"]
}
